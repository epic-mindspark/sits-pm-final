<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvCaregiverWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Caregiver"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPatientCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Code: ------"
            android:textSize="14sp"
            android:textColor="#1976D2"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCaregiverMedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnCaregiverScan"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“¸ Scan Prescription for Patient"
            android:textSize="15sp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#1976D2" />

        <Button
            android:id="@+id/btnCaregiverAddManual"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="âœï¸ Add Medicine Manually"
            android:textSize="15sp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnCaregiverSwitch"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ”„ Switch Account"
            android:textSize="15sp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#FF9800" />

    </LinearLayout>

</ScrollView>