<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Scan Results"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121" />

        <Button
            android:id="@+id/btnRescan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Rescan"
            android:textSize="13sp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />
    </LinearLayout>

    <!-- Main scrollable content area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ① PROGRESS — shown while OCR/Gemini is running -->
            <LinearLayout
                android:id="@+id/layoutProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="48dp"
                android:gravity="center"
                android:visibility="visible">

                <ProgressBar
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:indeterminate="true"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/tvProgressStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starting scan..."
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:gravity="center"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

            <!-- ② SUCCESS HEADER — shown after medicines found -->
            <TextView
                android:id="@+id/tvSuccessHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✅ Detected medicines"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:padding="16dp"
                android:background="#E8F5E9"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDetectedLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Review and confirm below:"
                android:textSize="14sp"
                android:textColor="#555555"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:visibility="gone" />

            <!-- ③ MEDICINES LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMedicines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false" />

            <!-- ④ DEBUG / ERROR — shown when something fails -->
            <LinearLayout
                android:id="@+id/layoutDebug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debug Log"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#B71C1C"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvRawText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:textColor="#333333"
                    android:padding="12dp"
                    android:background="#FFF9C4"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Confirm &amp; Set Reminders"
            android:textSize="16sp"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:enabled="false" />
    </LinearLayout>

</LinearLayout>