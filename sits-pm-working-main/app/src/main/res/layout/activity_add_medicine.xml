<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœï¸ Add Medicine Manually"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="24dp" />

        <!-- Medicine Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Medicine Name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMedicineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Dosage -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Dosage (e.g., 500mg)"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDosage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Frequency Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How often?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/rgFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbOnceDaily"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="  Once daily (1-0-0)"
                android:textSize="15sp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbTwiceDaily"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="  Twice daily (1-0-1)"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rbThriceDaily"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="  Three times daily (1-1-1)"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rbCustom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="  Custom"
                android:textSize="15sp" />

        </RadioGroup>

        <!-- Custom Frequency Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCustomFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Custom frequency (e.g., Every 8 hours)"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCustomFrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Timing -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When to take?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/rgTiming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbBeforeFood"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="  Before food"
                android:textSize="15sp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbAfterFood"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="  After food"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rbWithFood"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="  With food"
                android:textSize="15sp" />

        </RadioGroup>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveMedicine"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ’¾ Save Medicine"
            android:textSize="18sp"
            android:backgroundTint="#4CAF50" />

        <!-- Add Another Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddAnother"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="âž• Save &amp; Add Another"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="#1976D2" />

    </LinearLayout>

</ScrollView>