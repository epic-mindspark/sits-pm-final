<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:title="MedBox"
            app:titleTextColor="#1A1A2E"
            app:titleTextAppearance="@style/TextHeading"
            app:subtitle="Medication Manager"
            app:subtitleTextColor="#5F6368" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Status Banner -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E8F5E9"
                app:strokeColor="#C8E6C9"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/statusDot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/status_dot_green" />

                    <TextView
                        android:id="@+id/tvConnectionStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="System ready"
                        android:textSize="13sp"
                        android:textColor="#2E7D32"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvMedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 meds"
                        android:textSize="13sp"
                        android:textColor="#2E7D32"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Section Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD MEDICATION"
                android:textSize="11sp"
                android:textColor="#5F6368"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp" />

            <!-- Scan Prescription -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardScanPrescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#E8EAF0"
                app:strokeWidth="1dp"
                app:rippleColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_scan"
                        android:padding="8dp"
                        android:background="@drawable/icon_bg_blue"
                        app:tint="#0D47A1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scan Prescription"
                            android:textSize="15sp"
                            android:textColor="#1A1A2E"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Camera capture with OCR extraction"
                            android:textSize="12sp"
                            android:textColor="#80868B"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#80868B" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Add Manually -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAddManually"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#E8EAF0"
                app:strokeWidth="1dp"
                app:rippleColor="#E8F5E9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_edit"
                        android:padding="8dp"
                        android:background="@drawable/icon_bg_green"
                        app:tint="#00796B" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Manually"
                            android:textSize="15sp"
                            android:textColor="#1A1A2E"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter medicine details manually"
                            android:textSize="12sp"
                            android:textColor="#80868B"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#80868B" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Section Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MANAGE"
                android:textSize="11sp"
                android:textColor="#5F6368"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="4dp" />

            <!-- My Medications -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMyMedications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#E8EAF0"
                app:strokeWidth="1dp"
                app:rippleColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_medication"
                        android:padding="8dp"
                        android:background="@drawable/icon_bg_orange"
                        app:tint="#E65100" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Medications"
                            android:textSize="15sp"
                            android:textColor="#1A1A2E"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View schedules and manage alarms"
                            android:textSize="12sp"
                            android:textColor="#80868B"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#80868B" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Alarm Schedule -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAlarmSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#E8EAF0"
                app:strokeWidth="1dp"
                app:rippleColor="#F3E5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_alarm"
                        android:padding="8dp"
                        android:background="@drawable/icon_bg_purple"
                        app:tint="#6A1B9A" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alarm Schedule"
                            android:textSize="15sp"
                            android:textColor="#1A1A2E"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Configure medication reminders"
                            android:textSize="12sp"
                            android:textColor="#80868B"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#80868B" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>