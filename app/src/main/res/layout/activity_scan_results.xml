<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#1976D2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ Scan Results"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review the extracted medicines below"
            android:textSize="14sp"
            android:textColor="#BBDEFB"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Raw OCR Text (scrollable) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Raw Extracted Text"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1976D2" />

            <TextView
                android:id="@+id/tvRawText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Scanning..."
                android:textSize="13sp"
                android:textColor="#616161"
                android:layout_marginTop="8dp"
                android:scrollbars="vertical"
                android:fontFamily="monospace" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Medicines List -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detected Medicines:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMedicines"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRescan"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ðŸ”„ Rescan"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="#1976D2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="âœ… Confirm"
            android:layout_marginStart="8dp"
            android:backgroundTint="#4CAF50" />

    </LinearLayout>

</LinearLayout>